{
	"name": "sveltia-cms-auth-hono",
	"version": "0.0.2",
	"author": "MikeNewXYZ",
	"description": "Authentication library for Sveltia CMS using Hono.",
	"keywords": [
		"auth",
		"hono",
		"sveltia",
		"cms"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/mikenewxyz/sveltia-cms-auth-hono"
	},
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist",
		"README.md"
	],
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./platforms/*": {
			"types": "./dist/platforms/*.d.ts",
			"import": "./dist/platforms/*.js"
		}
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup"
	},
	"dependencies": {
		"@hono/node-server": "^1.13.8",
		"@hono/zod-validator": "^0.4.3",
		"arctic": "^3.5.0",
		"hono": "^4.7.4",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"tsup": "^8.4.0",
		"typescript": "^5.8.2"
	}
}
